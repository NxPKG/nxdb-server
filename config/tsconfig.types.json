{
  "// description": "this tsconfig is used when the types are generated",
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "es2022",
    "outDir": "../dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "stripInternal": true,
    "esModuleInterop": true,
    "noEmit": false,
  },
  "include": [
    "../src"
  ],
  "exclude": [
    "../plugins"
  ]
}
